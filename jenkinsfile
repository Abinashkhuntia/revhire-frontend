pipeline { 
    environment {
        bucket_URI="s3://revhire-tf-bucket"
        
    }
    agent any 
    stages {
        stage('checkout') {
            steps {
                git branch: 'main',
                url: 'https://github.com/Abinashkhuntia/revhire-frontend.git'
            }
        }
        
        stage('Building the Frontend artifacts'){
            steps {
                script {
                    echo "Building the Frontend artifacts"
                    sh "npm install"
                    sh "ng build "
                }
            }
        }
        stage('Building the Infrastructure') {
            steps {
                script {
                    sh "cd terraform"
                    sh "pwd"
                    sh "terraform init"
                    sh "terraform plan"
                    sh "terraform apply -auto-approve"
                    sh "cd .."
                echo "buildig..."
                }
            }
        }
        stage('Pushing build artifact to s3') {
            steps {
                script {
                    echo "Pushing build artifact to s3"
                    sh "aws  s3 rm ${bucket-URI} --recursive "
                    sh "aws s3 sync dist/revhire ${bucket-URI}"
                }
            }
        }
    } 
}
